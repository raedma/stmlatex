% Declare that this style file requires at least LaTeX version 2e.
\NeedsTeXFormat{LaTeX2e}

% Provide the name of your page, the date it was last updated, and a comment about what it's used for
\ProvidesPackage{stmunits}[2023/02/12 STMs custom LaTeX unit definitions]

% ---------------------------
% Options
% ---------------------------

% For options
\@ifpackageloaded{kvoptions}{}{\RequirePackage{kvoptions}}%

% Option group
\SetupKeyvalOptions{%
  family=stmunits,%
  prefix=stmunits@,%
  setkeys=\kvsetkeys,%
}

% Items
\DeclareBoolOption[true]{items}

% Load styles
\DeclareBoolOption[true]{styles}

% Apply style name
\DeclareStringOption[stmdefault]{style}

% Process options
\ProcessKeyvalOptions{stmunits}

% ---------------------------
% Modules
% ---------------------------

% Load the base package
\@ifpackageloaded{stmunitsbase}{}{%
  \RequirePackage{stmunitsbase}%
}%

% Load the styles
\ifstmunits@styles
  \@ifpackageloaded{stmunitsstyles}{}{%
    \RequirePackage[
      style=\stmunits@style
    ]{stmunitsstyles}%
  }%
\fi

% Load the items
\ifstmunits@items
  \@ifpackageloaded{stmunitsitems}{}{%
    \RequirePackage{stmunitsitems}%
  }%
\fi

