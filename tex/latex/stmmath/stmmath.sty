% Declare that this style file requires at least LaTeX version 2e.
\NeedsTeXFormat{LaTeX2e}

% Provide the name of your page, the date it was last updated, and a comment about what it's used for
\ProvidesPackage{stmmath}[2023/02/12 STMs custom LaTeX math definitions]

% ---------------------------
% Options
% ---------------------------

% For options
\@ifpackageloaded{kvoptions}{}{\RequirePackage{kvoptions}}%

% Option group
\SetupKeyvalOptions{%
  family=stmmath,%
  prefix=stmmath@,%
  setkeys=\kvsetkeys,%
}

% Items
\DeclareBoolOption[true]{items}

% Process options
\ProcessKeyvalOptions{stmmath}

% ---------------------------
% Modules
% ---------------------------

% Load the base package
\@ifpackageloaded{stmmathbase}{}{%
  \RequirePackage{stmmathbase}%
}%

% Load the items
\ifstmmath@items
  \@ifpackageloaded{stmmathitems}{}{%
    \RequirePackage{stmmathitems}%
  }%
\fi

