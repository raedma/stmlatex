% Declare that this style file requires at least LaTeX version 2e.
\NeedsTeXFormat{LaTeX2e}

% Provide the name of your page, the date it was last updated, and a comment about what it's used for
\ProvidesPackage{stmhyperref}[2019/10/27 STMs hyperref setup definitions]

% ---------------------------
% Options
% ---------------------------

% For options
\@ifpackageloaded{kvoptions}{}{\RequirePackage{kvoptions}}%

\SetupKeyvalOptions{%
  family=stmhyperref,%
  prefix=stmhyperref@,%
  setkeys=\kvsetkeys,%
}

% Load styles
\DeclareBoolOption[true]{styles}

% Apply style name
\DeclareStringOption[stmdefault]{style}

% Load styles
\DeclareBoolOption[true]{pdfopts}

% Apply style name
\DeclareStringOption[stmdefault]{pdfopt}

% Process options
\ProcessKeyvalOptions{stmhyperref}

% ---------------------------
% Base
% ---------------------------

\@ifpackageloaded{hyperref}{}{%
  \RequirePackage{stmhyperrefbase}
}%

% ---------------------------
% Modules
% ---------------------------

% Load the styles
\ifstmhyperref@styles
  \@ifpackageloaded{stmhyperrefstyles}{}{%
    \RequirePackage[
      style=\stmhyperref@style
    ]{stmhyperrefstyles}%
  }%
\fi

% Load the styles
\ifstmhyperref@pdfopts
  \@ifpackageloaded{stmhyperrefpdfopts}{}{%
    \RequirePackage[
      style=\stmhyperref@pdfopt
    ]{stmhyperrefpdfopts}%
  }%
\fi

