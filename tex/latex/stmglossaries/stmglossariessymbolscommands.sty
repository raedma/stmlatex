%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Commands                         %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newcommand{\csyslocal}[1]{%
  %The symbol
  \ensuremath{\hat{#1}}%
  %Add the operator to the list
  \glsadd{symb:operator:csys:local}%
}

\newcommand{\csysmaterial}[1]{%
  %The symbol
  \ensuremath{\bar{#1}}%
  %Add the operator to the list
  \glsadd{symb:operator:csys:material}%
}

\newcommand{\difference}[1]{%
  %The symbol
  \ensuremath{\glssymbol{symb:operator:Delta}#1}%
}

\newcommand{\derivative}[1]{%
  %The symbol
  \ensuremath{\glssymbol{symb:operator:dif}#1}%
  %Add the operator to the list
  \glsadd{symb:operator:dif}%
}

\newcommand{\timederivativeshort}[1]{%
  %The symbol
  \ensuremath{\dot{#1}}%
  %Add the operator to the list
  \glsadd{symb:operator:dif:short:time}%
}

\newcommand{\timederivativeshorttwo}[1]{%
  %The symbol
  \ensuremath{\ddot{#1}}%
  %Add the operator to the list
  \glsadd{symb:operator:dif:short:time:2}%
}

\newcommand{\mean}[1]{%
  %The symbol
  \ensuremath{\overline{#1}}%
  %Add the operator to the list
  \glsadd{symb:operator:mean}%
}

\newcommand{\norm}[1]{%
  %The symbol
  \ensuremath{\glssymbol{symb:operator:norm:left}#1\glssymbol{symb:operator:norm:right}}%
  %Add the operator to the list
  \glsadd{symb:operator:norm}%
}

\newcommand{\transpose}[1]{%
  \ensuremath{#1^{\glssymbol{symb:operator:matrix:transpose}}}%
}

\newcommand{\inverse}[1]{%
  \ensuremath{#1^{\glssymbol{symb:operator:matrix:inverse}}}%
}

\newcommand{\partialderivativeshort}[2]{%
  %The symbol
  \ensuremath{#1_{,#2}}%
  %Add the operator to the list
  \glsadd{symb:operator:differential:partial:short}%
}

