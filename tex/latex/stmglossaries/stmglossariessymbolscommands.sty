% ---------------------------
% Shortcuts
% ---------------------------

\newcommand{\csyslocal}[1]{%
  %The symbol
  \ensuremath{\hat{#1}}%
  %Add the operator to the list
  \glsadd{sym:operator:csys:local}%
}

\newcommand{\csysmaterial}[1]{%
  %The symbol
  \ensuremath{\bar{#1}}%
  %Add the operator to the list
  \glsadd{sym:operator:csys:material}%
}

\newcommand{\difference}[1]{%
  %The symbol
  \ensuremath{\glssymbol{sym:operator:Delta}#1}%
}

\newcommand{\derivative}[1]{%
  %The symbol
  \ensuremath{\glssymbol{sym:operator:dif}#1}%
  %Add the operator to the list
  \glsadd{sym:operator:dif}%
}

\newcommand{\timederivativeshort}[1]{%
  %The symbol
  \ensuremath{\dot{#1}}%
  %Add the operator to the list
  \glsadd{sym:operator:dif:short:time}%
}

\newcommand{\timederivativeshorttwo}[1]{%
  %The symbol
  \ensuremath{\ddot{#1}}%
  %Add the operator to the list
  \glsadd{sym:operator:dif:short:time:2}%
}

\newcommand{\mean}[1]{%
  %The symbol
  \ensuremath{\overline{#1}}%
  %Add the operator to the list
  \glsadd{sym:operator:mean}%
}

\newcommand{\norm}[1]{%
  %The symbol
  \ensuremath{\glssymbol{sym:operator:norm:left}#1\glssymbol{sym:operator:norm:right}}%
  %Add the operator to the list
  \glsadd{sym:operator:norm}%
}

\newcommand{\transpose}[1]{%
  \ensuremath{#1^{\glssymbol{sym:operator:matrix:transpose}}}%
}

\newcommand{\inverse}[1]{%
  \ensuremath{#1^{\glssymbol{sym:operator:matrix:inverse}}}%
}

\newcommand{\partialderivativeshort}[2]{%
  %The symbol
  \ensuremath{#1_{,#2}}%
  %Add the operator to the list
  \glsadd{sym:operator:differential:partial:short}%
}

