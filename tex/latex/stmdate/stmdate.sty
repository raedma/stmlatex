% Declare that this style file requires at least LaTeX version 2e.
\NeedsTeXFormat{LaTeX2e}

% Provide the name of your page, the date it was last updated, and a comment about what it's used for
\ProvidesPackage{stmdate}[2023/02/12 STMs custom LaTeX date definitions]

% ---------------------------
% Options
% ---------------------------

% Options package
\@ifpackageloaded{kvoptions}{}{\RequirePackage{kvoptions}}%

% Option group
\SetupKeyvalOptions{%
  family=stmdate,%
  prefix=stmdate@,%
  setkeys=\kvsetkeys,%
}

% Styles
\DeclareBoolOption[true]{commands}

% Styles
\DeclareBoolOption[true]{styles}

% Process options
\ProcessKeyvalOptions{stmdate}

% ---------------------------
% Modules
% ---------------------------

% Load the base package
\@ifpackageloaded{stmdatebase}{}{%
  \RequirePackage{stmdatebase}%
}%

% Commands
\ifstmdate@commands
  \RequirePackage{stmdatecommands}
\fi

% Styles
\ifstmdate@styles
  \RequirePackage{stmdatestyles}
\fi

