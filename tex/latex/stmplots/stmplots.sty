% Declare that this style file requires at least LaTeX version 2e.
\NeedsTeXFormat{LaTeX2e}

% Provide the name of your page, the date it was last updated, and a comment about what it's used for
\ProvidesPackage{stmplots}[2019/10/27 STMs custom LaTeX plot definitions]

% ---------------------------
% Package
% ---------------------------

\@ifpackageloaded{pgfplots}{%
  \usepgfplotslibrary{fillbetween}%
  \usepgfplotslibrary{groupplots}%
  \usepgfplotslibrary{patchplots}%
}{%
  \RequirePackage{pgfplots}%
  \usepgfplotslibrary{fillbetween}%
  \usepgfplotslibrary{groupplots}%
  \usepgfplotslibrary{patchplots}%
}

\@ifpackageloaded{pgfplotstable}{}{%
  \RequirePackage{pgfplotstable}%
}

% ---------------------------
% Pgf version
% ---------------------------

\pgfplotsset{compat=newest}

% ---------------------------
% Modules
% ---------------------------

% Libraries
\RequirePackage{stmtikzlibraries}

% Styles
\RequirePackage{stmplotsstyles}

% Externalization
\RequirePackage[outputfolder=\stmtikz@outputfolder]{stmtikzexternalization}

