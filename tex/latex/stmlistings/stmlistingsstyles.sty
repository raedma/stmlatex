\@ifpackageloaded{listings}{}{\RequirePackage{listings}}%
\@ifpackageloaded{stmcolors}{}{\RequirePackage{stmcolors}}%

% ---------------------------
% Styles
% ---------------------------

\lstdefinestyle{basestyle}{
  backgroundcolor=\color{boxgraycolor},
  basicstyle=\ttfamily,
  columns=fullflexible,
}

\lstdefinestyle{inlinecodestyle}{
  backgroundcolor=\color{boxgraycolor},
  basicstyle=\ttfamily,
}

\lstdefinestyle{scriptstyle}{
  style=basestyle,
  escapechar=\%,% char to escape out of listings and back to LaTeX
}

\lstdefinestyle{texcodestyle}{
  language=[LaTeX]TeX,
  style=basestyle,
  breaklines=true,
  commentstyle=\color{codecommentgraycolor},
}

\lstdefinestyle{inlinetexcodestyle}{
  language=[LaTeX]TeX,
  style=basestyle,
  upquote=true,% Important for copy-paste
}

\lstdefinestyle{texpackagedocstyle}{
  style=texcodestyle,%
  numbers=left,%
  keepspaces=true,%
}

